<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

<EditText
    android:id="@+id/editT1"
    android:layout_width="250dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:hint="User Name"
    android:layout_below="@id/logo"

    />
    <EditText
        android:id="@+id/editT2"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/editT1"/>
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editT2"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:background="#2EB95C"
        android:onClick="login"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginbtn"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/loginbtn"
        android:onClick="facebook"
        />
    <ImageView
        android:id="@+id/google"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/google"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/loginbtn"
        android:layout_toEndOf="@id/facebook"
        android:onClick="google"

        />
    <ImageView
        android:id="@+id/twitter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/loginbtn"
        android:layout_toEndOf="@id/google"
        android:onClick="twitter"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an acount"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/google"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/signupbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/google"
        android:layout_marginTop="60dp"
        android:text="Sign Up"
        android:background="#2EB95C"
        android:onClick="signup"


        />



</RelativeLayout>